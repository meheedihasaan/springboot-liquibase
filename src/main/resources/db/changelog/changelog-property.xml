    <property name="int" value="int" dbms="${dbms}"/>
    <property name="bigInt" value="bigint" dbms="${dbms}"/>
    <property name="numeric" value="numeric(21, 6)" dbms="${dbms}"/>
    <property name="uniqueId" value="uniqueidentifier" dbms="${dbms}"/>
    <property name="bool" value="bool" dbms="${dbms}"/>
    <property name="false" value="'0'" dbms="${dbms}"/>
