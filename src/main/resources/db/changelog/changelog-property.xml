    <property name="date" value="date" dbms="${dbms}"/>
    <property name="datetime2" value="datetime2" dbms="${dbms}"/>

    <!-- Functions -->
    <property name="newUniqueId" value="gen_random_uuid()" dbms="${dbms}"/>
    <property name="newSequentialId" value="uuid_generate_v1()" dbms="${dbms}"/>
    <property name="currentDate" value="NOW()" dbms="${dbms}"/>

    <!-- Common Columns -->
    <property name="global.table.column.id" value="id" dbms="${dbms}"/>
    <property name="global.table.column.created_by" value="created_by" dbms="${dbms}"/>
