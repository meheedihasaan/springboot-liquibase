    <property name="length512" value="512"/>
    <property name="length1000" value="1000"/>
    <property name="length1024" value="1024"/>
    <property name="length2048" value="2048"/>
    <property name="length4096" value="4096"/>
    <property name="lengthMax" value="max"/>

    <!-- Data Types -->
    <property name="varchar1" value="varchar(${length1})" dbms="${dbms}"/>
    <property name="varchar2" value="varchar(${length2})" dbms="${dbms}"/>
